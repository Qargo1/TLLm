# .env
TELEGRAM_BOT_TOKEN=ВАШ_ТЕЛЕГРАМ_ТОКЕН_ЗДЕСЬ
# Укажите имя модели на Hugging Face или локальный путь
# Пример для Llama 3.1 8B Instruct:
MODEL_NAME_OR_PATH=nidum/Nidum-Llama-3.2-3B-Uncensored
# Или укажите путь к скачанной модели, если она локально:
# MODEL_NAME_OR_PATH=C:/path/to/your/downloaded/model

# Опционально: Укажите конкретную ревизию модели (например, для GGUF/GPTQ)
# MODEL_REVISION=main
# MODEL_REVISION=gguf # Если используете llama-cpp-python с GGUF

# Опционально: Укажите модель для эмбеддингов
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Параметры генерации (можно будет менять через команды бота позже)
GENERATION_MAX_NEW_TOKENS=256
GENERATION_TEMPERATURE=0.7
GENERATION_TOP_P=0.9
GENERATION_TOP_K=50